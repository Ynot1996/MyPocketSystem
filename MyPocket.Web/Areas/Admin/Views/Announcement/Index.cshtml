@model IEnumerable<MyPocket.Core.Models.Announcement>
@{
    ViewData["Title"] = "公告管理";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>公告管理</h2>

<div class="mb-2">
    <input type="text" id="tableFilter" class="form-control" placeholder="搜尋...">
</div>

<p>
    <a asp-action="Create" class="btn btn-success">新增公告</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>標題</th>
            <th>內容</th>
            <th>發布時間</th>
            <th>管理</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.PublishDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AnnouncementId" class="btn btn-info btn-sm">詳細</a>
                <a asp-action="Edit" asp-route-id="@item.AnnouncementId" class="btn btn-warning btn-sm">編輯</a>
                <a asp-action="Delete" asp-route-id="@item.AnnouncementId" class="btn btn-danger btn-sm">刪除</a>
            </td>
        </tr>
    }
    </tbody>
</table>
