@model MyPocket.Core.Models.SavingGoal
@{
    ViewData["Title"] = "Saving Goal Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white fw-bold">Saving Goal Details</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Goal Name</label>
                        <div class="form-control-plaintext">@Model.GoalName</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Target Amount</label>
                        <div class="form-control-plaintext">@Model.TargetAmount.ToString("N0")</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Amount</label>
                        <div class="form-control-plaintext">@Model.CurrentAmount.ToString("N0")</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Target Date</label>
                        <div class="form-control-plaintext">@Model.TargetDate.ToString("yyyy-MM-dd")</div>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.GoalId" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
