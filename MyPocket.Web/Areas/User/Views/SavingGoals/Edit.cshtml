@model MyPocket.Core.Models.SavingGoal
@{
    ViewData["Title"] = "Edit Saving Goal";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark fw-bold">Edit Saving Goal</div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="goalId" value="@Model.GoalId" />
                        <div class="mb-3">
                            <label class="form-label">Goal Name</label>
                            <input class="form-control" value="@Model.GoalName" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Target Date</label>
                            <input class="form-control" value="@Model.TargetDate.ToString("yyyy-MM-dd")" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Target Amount</label>
                            <input name="targetAmount" class="form-control" type="number" min="1" step="1" value="@Model.TargetAmount" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Current Amount</label>
                            <input class="form-control" value="@Model.CurrentAmount.ToString("N0")" disabled />
                        </div>
                        <div class="alert alert-info">Current amount will be recalculated automatically based on your transactions.</div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-warning text-white">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
