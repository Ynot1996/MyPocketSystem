@model dynamic
@{
    ViewData["Title"] = "Add Saving Goal";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var now = DateTime.Now;
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white fw-bold">Add Saving Goal</div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Goal Type</label>
                            <select name="goalType" class="form-select" id="goalType" required>
                                <option value="Monthly">Monthly</option>
                                <option value="Yearly">Yearly</option>
                            </select>
                        </div>
                        <div class="mb-3" id="monthGroup">
                            <label class="form-label">Month</label>
                            <select name="month" class="form-select">
                                @for (int m = 1; m <= 12; m++)
                                {
                                    if (m == now.Month)
                                    {
                                        <text><option value="@m" selected>@m</option></text>
                                    }
                                    else
                                    {
                                        <text><option value="@m">@m</option></text>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3" id="yearGroup">
                            <label class="form-label">Year</label>
                            <select name="year" class="form-select">
                                @for (int y = now.Year; y <= now.Year + 2; y++)
                                {
                                    <option value="@y">@y</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Target Amount</label>
                            <input name="targetAmount" class="form-control" type="number" min="1" step="1" required />
                        </div>
                        <div class="alert alert-info">Current amount will be calculated automatically based on your transactions.</div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            function toggleMonth() {
                if ($("#goalType").val() === "Monthly") {
                    $("#monthGroup").show();
                } else {
                    $("#monthGroup").hide();
                }
            }
            $("#goalType").change(toggleMonth);
            toggleMonth();
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
