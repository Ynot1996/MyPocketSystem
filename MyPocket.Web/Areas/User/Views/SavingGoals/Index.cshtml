@model IEnumerable<MyPocket.Core.Models.SavingGoal>
@{
    ViewData["Title"] = "Saving Goals";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold">Saving Goals</h2>
                <a class="btn btn-success btn-lg" asp-action="Create"><i class="bi bi-plus-circle"></i> Add Goal</a>
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">No saving goals yet. Click "Add Goal" to create one.</div>
            }
            <div class="row g-3">
                @foreach (var item in Model)
                {
                    var percent = item.TargetAmount == 0 ? 0 : Math.Min(100, (int)((item.CurrentAmount / item.TargetAmount) * 100));
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0">@item.GoalName</h5>
                                    <span class="badge bg-secondary">@item.TargetDate.ToString("yyyy-MM-dd")</span>
                                </div>
                                <div class="mb-2">
                                    <span>Target Amount: </span><strong>@item.TargetAmount.ToString("N0")</strong>
                                </div>
                                <div class="mb-2">
                                    <span>Current Amount: </span><strong>@item.CurrentAmount.ToString("N0")</strong>
                                </div>
                                <div class="progress mb-2" style="height: 1.2rem;">
                                    <div class="progress-bar @(percent >= 100 ? "bg-success" : "bg-info")" role="progressbar" style="width: @percent%" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                                        @percent%
                                    </div>
                                </div>
                                @if (percent >= 100)
                                {
                                    <div class="alert alert-success mt-2 p-2"><i class="bi bi-trophy me-2"></i>Goal Achieved!</div>
                                }
                                <div class="d-flex justify-content-end gap-2 mt-2">
                                    <a asp-action="Details" asp-route-id="@item.GoalId" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i> View</a>
                                    <a asp-action="Edit" asp-route-id="@item.GoalId" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.GoalId" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
