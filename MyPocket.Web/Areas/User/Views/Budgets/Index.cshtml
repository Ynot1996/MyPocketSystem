@model IEnumerable<MyPocket.Shared.ViewModels.Budgets.BudgetViewModel>
@{
    ViewData["Title"] = "預算管理";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">預算管理</h2>
    <a asp-action="Create" class="btn btn-success btn-lg"><i class="bi bi-plus-circle"></i> 新增預算</a>
</div>
<div class="row g-3">
    @foreach (var item in Model)
    {
        var over = item.Remaining < 0;
        var percent = item.Amount == 0 ? 0 : Math.Min(100, (int)((item.Spent / item.Amount) * 100));
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm @(over ? "border-danger" : "")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title mb-0">@item.CategoryName <span class="badge bg-secondary">@item.CategoryType</span></h5>
                        @if (over)
                        {
                            <span class="badge bg-danger">超出預算</span>
                        }
                    </div>
                    <div class="mb-2">
                        <span>預算：</span><strong>@item.Amount.ToString("N0")</strong>
                    </div>
                    <div class="mb-2">
                        <span>已花費：</span><strong>@item.Spent.ToString("N0")</strong>
                    </div>
                    <div class="mb-2">
                        <span>剩餘：</span><strong class="@(over ? "text-danger" : "")">@item.Remaining.ToString("N0")</strong>
                    </div>
                    <div class="progress mb-2" style="height: 1.2rem;">
                        <div class="progress-bar @(over ? "bg-danger" : "bg-primary")" role="progressbar" style="width: @percent%" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                            @percent%
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.BudgetId" class="btn btn-outline-primary btn-sm me-2"><i class="bi bi-pencil"></i> 編輯</a>
                        <a asp-action="Delete" asp-route-id="@item.BudgetId" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> 刪除</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@if (!Model.Any())
{
    <div class="alert alert-info mt-4">尚未設定任何預算，請點擊「新增預算」。</div>
}
