@* User Member Layout *@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPocket.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPocket.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <style>
        /* Navigation bar style */
        .navbar {
            padding: 0.5rem 1rem;
            background: linear-gradient(to right, #ffffff, #f8f9fa);
            border-bottom: 2px solid #e9ecef;
        }

        .navbar-brand {
            font-size: 2rem;
            font-weight: 700;
            color: #212529 !important;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .navbar-brand:hover {
                background-color: rgba(33, 37, 41, 0.1);
                color: #212529 !important;
            }

        /* Navigation link style */
        .navbar .nav-link {
            position: relative;
            margin: 0 0.25rem;
            padding: 0.7rem 1rem;
            border-radius: 6px;
            transition: all 0.3s ease;
            color: #495057 !important;
        }

            .navbar .nav-link:hover {
                background-color: rgba(33, 37, 41, 0.1);
                color: #212529 !important;
                transform: translateY(-1px);
            }

            .navbar .nav-link.active {
                background-color: rgba(33, 37, 41, 0.15);
                color: #212529 !important;
                font-weight: 500;
            }

            .navbar .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 5px;
                left: 50%;
                background-color: #212529;
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .navbar .nav-link:hover::after,
            .navbar .nav-link.active::after {
                width: 80%;
            }

            /* Icon style */
            .navbar .nav-link i {
                margin-right: 0.4rem;
                font-size: 1.1rem;
                vertical-align: -2px;
            }

        /* Dropdown menu style */
        .dropdown-menu {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 8px;
            padding: 0.5rem;
        }

        .dropdown-item {
            padding: 0.6rem 1rem;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: rgba(33, 37, 41, 0.1);
                color: #212529;
            }

            .dropdown-item i {
                margin-right: 0.5rem;
                font-size: 1.1rem;
                vertical-align: -2px;
            }

        /* Badge style */
        .badge {
            padding: 0.35em 0.65em;
            margin-left: 0.5rem;
            font-weight: 500;
        }

        /* Container style */
        .container {
            max-width: 1200px;
            padding: 0 1rem;
        }

        /* Main content area */
        main {
            min-height: calc(100vh - 280px);
            padding: 2rem 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="User" asp-controller="Home" asp-action="index">
                    MyPocket
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Transactions" ? "active" : "")"
                               asp-area="User" asp-controller="Transactions" asp-action="Index">
                                <i class="bi bi-journal-text"></i> Transactions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Categories" ? "active" : "")"
                               asp-area="User" asp-controller="Categories" asp-action="Index">
                                <i class="bi bi-tags"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Budgets" ? "active" : "")"
                               asp-area="User" asp-controller="Budgets" asp-action="Index">
                                <i class="bi bi-wallet2"></i> Budgets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "SavingGoals" ? "active" : "")"
                               asp-area="User" asp-controller="SavingGoals" asp-action="Index">
                                <i class="bi bi-piggy-bank"></i> Saving Goals
                            </a>
                        </li>
                        @if (User.IsInRole("PaidMember"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "PaidMember" ? "active" : "")"
                                   asp-area="User" asp-controller="PaidMember" asp-action="Index">
                                    <i class="bi bi-gem"></i> Premium Area
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Subscriptions" ? "active" : "")"
                               asp-area="User" asp-controller="Subscriptions" asp-action="Plans">
                                <i class="bi bi-star"></i> Plans
                                @if (User.IsInRole("FreeMember"))
                                {
                                    <span class="badge bg-warning text-dark">Upgrade</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")"
                               href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                                <span>@(User.FindFirst("Nickname")?.Value ?? User.Identity?.Name ?? "Member")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="User" asp-controller="User" asp-action="Index">
                                        <i class="bi bi-gear"></i> Settings
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="User" asp-controller="Subscriptions" asp-action="CurrentPlan">
                                        <i class="bi bi-star"></i> Membership
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @Html.Partial("_FooterPartial")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>