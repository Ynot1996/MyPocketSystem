@using MyPocket.Shared.Resources
@inject ILocalizationService Localizer
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
    ViewData["Title"] = Localizer.GetString("Home", culture);
}

<div class="container py-5" style="min-height: 80vh; background: linear-gradient(135deg, #f8fafc 0%, #e0e7ef 100%);">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-7 text-center">
            <h1 class="display-3 fw-bold mb-3" style="color: #2d3748;">@Localizer.GetString("SimpleBudgetManagement", culture)</h1>
            <p class="lead mb-4" style="color: #4a5568;">@Localizer.GetString("EasyManageDescription", culture)<br>@Localizer.GetString("CloudDescription", culture)</p>
            <a href="#" class="btn btn-primary btn-lg px-5 shadow-sm" style="background: #3b82f6; border: none;">@Localizer.GetString("StartUsingNow", culture)</a>
        </div>
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-md-10">
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="p-4 bg-white rounded shadow-sm h-100">
                        <i class="bi bi-bar-chart-fill display-5 text-primary mb-3"></i>
                        <h5 class="fw-bold mb-2">@Localizer.GetString("RealTimeReports", culture)</h5>
                        <p class="text-muted">@Localizer.GetString("ReportsDescription", culture)</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-4 bg-white rounded shadow-sm h-100">
                        <i class="bi bi-wallet2 display-5 text-success mb-3"></i>
                        <h5 class="fw-bold mb-2">@Localizer.GetString("MultiAccountManagement", culture)</h5>
                        <p class="text-muted">@Localizer.GetString("AccountsDescription", culture)</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-4 bg-white rounded shadow-sm h-100">
                        <i class="bi bi-cloud-check-fill display-5 text-info mb-3"></i>
                        <h5 class="fw-bold mb-2">@Localizer.GetString("CloudSecurity", culture)</h5>
                        <p class="text-muted">@Localizer.GetString("SecurityDescription", culture)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
