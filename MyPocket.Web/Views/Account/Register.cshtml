@model MyPocket.Shared.ViewModels.Accounts.RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="min-height: 80vh; background: linear-gradient(135deg, #fff 0%, #f6f7fb 100%);">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="bg-white rounded-4 shadow-sm p-5 border border-1">
                <h2 class="fw-bold mb-4 text-center" style="color:#222; letter-spacing:-1px;">Create your account</h2>
                <form asp-action="Register" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email address</label>
                        <input asp-for="Email" class="form-control form-control-lg" autocomplete="username" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" autocomplete="new-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" autocomplete="new-password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Nickname" class="form-label">Nickname</label>
                        <input asp-for="Nickname" class="form-control form-control-lg" />
                        <span asp-validation-for="Nickname" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark btn-lg w-100 mt-3" style="border-radius:8px;">Sign Up</button>
                </form>
                <div class="text-center mt-4">
                    <span class="text-muted">Already have an account?</span>
                    <a asp-action="Login" class="ms-1 link-primary">Log In</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}