<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPocket.Mobile.MainPage">
    <Grid>
        <VerticalStackLayout Padding="30" Spacing="30" VerticalOptions="Center">
            <Label Text="MyPocket" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />
            <Button Text="登入" Clicked="OnLoginClicked" BackgroundColor="#0078D7" TextColor="White" />
            <Button Text="註冊" Clicked="OnRegisterClicked" BackgroundColor="#00B294" TextColor="White" />
            <!-- 新增 ListView 顯示使用者清單 -->
            <ListView x:Name="UsersListView"
                      ItemsSource="{Binding Users}"
                      VerticalOptions="FillAndExpand"
                      Margin="0,20,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nickname}" Detail="{Binding Email}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
